{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe - Chocolate Huvelin{% endblock %}

{% block content %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h1 class="text-center mb-4">Modifier mon mot de passe</h1>
                        <a href="{{ path('account') }}" class="d-block mb-4 text-decoration-none"><i class="bi bi-arrow-left me-2"></i> Retourner à mon compte</a>
                        {% if notification %}
                            <div class="alert alert-info">{{ notification }}</div>
                        {% endif %}
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.nom, 'Mon prénom', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.prenom, 'Mon nom', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.email, 'Mon adresse email', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.old_password, 'Mot de passe actuel', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.old_password, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe actuel'}}) }}
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.new_password.first, 'Nouveau mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.new_password.first, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.new_password.second, 'Confirmez le nouveau mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.new_password.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmez le nouveau mot de passe'}}) }}
                                </div>
                            </div>
                        </div>
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary w-100'}}) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
